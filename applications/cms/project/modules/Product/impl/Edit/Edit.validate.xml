<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Product/config/validators.xml">
    <ae:configuration>
        <validators method="read">
            <validator class="product" required="false">
                <argument>product</argument>
            </validator>
        </validators>

        <validators method="write">
            <validator class="product">
                <argument>product</argument>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>





